<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hy.activity.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/mweixin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="weixin"/>

        <Button
            android:id="@+id/merweimashengcheng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Zxing二维码生成"/>

        <Button
            android:id="@+id/merweimashibie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Zxing二维码识别"/>

        <Button
            android:id="@+id/mlocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="location"/>

        <Button
            android:id="@+id/mwificonnect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="wificonnect"/>

        <Button
            android:id="@+id/mmap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="map"/>

        <Button
            android:id="@+id/mencryption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="encryption"/>

        <Button
            android:id="@+id/mpicasso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="picasso"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>
